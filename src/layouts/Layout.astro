---
import "@fontsource-variable/manrope";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="mx-auto max-w-7xl my-12 sm:my-20 border-x px-4 sm:px-16 border-secondary/10"
  >
    <slot />
  </body>
</html>
<style is:global>
  :root {
    color-scheme: light dark;
  }
  html {
    @apply text-primary;
    font-family: "Manrope Variable", sans-serif;
    letter-spacing: 0.025em;
    line-height: 1.625;
  }
  section {
    display: flex;
    flex-direction: column;
    margin-top: 5rem;
  }
  .title {
    font-weight: 700;
    font-size: 2rem;
    line-height: 1;
    text-transform: uppercase;
    text-align: center;
  }
  @media (min-width: 640px) {
    section {
      margin-top: 8rem;
    }
    .title {
      font-size: 3rem;
      text-align: initial;
    }
  }
</style>
